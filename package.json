{
  "name": "nodejs-eslint-husky-discord-bot-boilerplate",
  "version": "1.0.0",
  "description": "Discord bot boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "./node_modules/.bin/eslint --ext .js --ignore-path .gitignore .",
    "lintfix": "./node_modules/.bin/eslint --fix --ext .js --ignore-path .gitignore .",
    "lint:husky": "./node_modules/.bin/eslint",
    "lintfix:husky": "./node_modules/.bin/eslint --fix"
  },
  "keywords": [
    "nodejs",
    "discord-bot",
    "bot",
    "eslint",
    "husky",
    "node"
  ],
  "author": "Mauricio Mart√≠nez",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lintfix:husky",
      "yarn lint:husky"
    ]
  },
  "type": "module",
  "dependencies": {
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0"
  }
}
